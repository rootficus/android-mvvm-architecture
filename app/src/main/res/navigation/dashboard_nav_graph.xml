<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_homepage">

    <fragment
        android:id="@+id/navigation_homepage"
        android:name="com.rf.macgyver.ui.main.fragment.HomepageFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_homepage">
        <action
            android:id="@+id/go_home"
            app:destination="@+id/navigation_homepage"
            app:popUpTo="@+id/destination_to_pop"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_cart"
            app:destination="@id/navigation_cart" />

    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.rf.macgyver.ui.main.fragment.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/go_home"
            app:destination="@+id/navigation_cart"
            app:popUpTo="@+id/destination_to_pop"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_cart_to_navigation_payment"
            app:destination="@+id/navigation_payment"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_payment"
        android:name="com.rf.macgyver.ui.main.fragment.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment">
        <action
            android:id="@+id/go_home"
            app:destination="@+id/navigation_payment"
            app:popUpTo="@+id/destination_to_pop"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>