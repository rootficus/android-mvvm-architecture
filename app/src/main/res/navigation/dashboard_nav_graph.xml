<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_for_you">

    <fragment
        android:id="@+id/navigation_for_you"
        android:name="com.rf.tiffinService.ui.main.fragment.ForYouFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_for_you">
        <action
            android:id="@+id/go_home"
            app:destination="@+id/navigation_for_you"
            app:popUpTo="@+id/destination_to_pop"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_navigation_for_you_to_navigation_cart"
            app:destination="@id/navigation_cart" />

    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.rf.tiffinService.ui.main.fragment.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/go_home"
            app:destination="@+id/navigation_cart"
            app:popUpTo="@+id/destination_to_pop"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>