<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.rf.macgyver.ui.main.fragment.DashBoardFragment"
        android:label="DashBoardFragment"
        tools:layout="@layout/fragment_dashboard">

        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_daily_report"
            app:destination="@id/navigation_daily_report" />

        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_inspection"
            app:destination="@id/navigation_inspection" />

    </fragment>

    <fragment
        android:id="@+id/navigation_daily_report"
        android:name="com.rf.macgyver.ui.main.fragment.dailyReporting.DailyReportingFragment"
        android:label="DailyReportingFragment"
        tools:layout="@layout/fragment_daily_reporting">

        <action
            android:id="@+id/action_navigation_daily_report_to_navigation_step1_report"
            app:destination="@id/navigation_step1_report" />

    </fragment>
    <fragment
        android:id="@+id/navigation_step1_report"
        android:name="com.rf.macgyver.ui.main.fragment.dailyReporting.Step1DRFragment"
        android:label="Step1DRFragment"
        tools:layout="@layout/fragment_step1_d_r">

        <action
            android:id="@+id/action_navigation_step1_report_to_navigation_step2_report"
            app:destination="@id/navigation_step2_report" />
    </fragment>
    <fragment
        android:id="@+id/navigation_step2_report"
        android:name="com.rf.macgyver.ui.main.fragment.dailyReporting.Step2DRFragment"
        android:label="Step2DRFragment"
        tools:layout="@layout/fragment_step2_d_r">

        <action
            android:id="@+id/action_navigation_step2_report_to_navigation_step3_report"
            app:destination="@id/navigation_step3_report" />


    </fragment>
    <fragment
        android:id="@+id/navigation_step3_report"
        android:name="com.rf.macgyver.ui.main.fragment.dailyReporting.Step3DRFragment"
        android:label="Step3DRFragment"
        tools:layout="@layout/fragment_step3_d_r">

    </fragment>

    <fragment
        android:id="@+id/navigation_inspection"
        android:name="com.rf.macgyver.ui.main.fragment.inspection.InspectionFragment"
        android:label="InspectionFragment"
        tools:layout="@layout/fragment_inspection">

        <action
            android:id="@+id/action_navigation_inspection_to_navigation_step1_inspection"
            app:destination="@id/navigation_step1_inspection" />

    </fragment>
    <fragment
        android:id="@+id/navigation_step1_inspection"
        android:name="com.rf.macgyver.ui.main.fragment.inspection.Step1IPFragment"
        android:label="Step1IPFragment"
        tools:layout="@layout/fragment_step1_ip">

        <action
            android:id="@+id/action_navigation_step1_inspection_to_navigation_step2_inspection"
            app:destination="@id/navigation_step2_inspection" />
    </fragment>
    <fragment
        android:id="@+id/navigation_step2_inspection"
        android:name="com.rf.macgyver.ui.main.fragment.inspection.Step2IPFragment"
        android:label="Step2IPFragment"
        tools:layout="@layout/fragment_step2_ip">

        <action
            android:id="@+id/action_navigation_step2_inspection_to_navigation_step3_inspection"
            app:destination="@id/navigation_step3_inspection" />


    </fragment>
    <fragment
        android:id="@+id/navigation_step3_inspection"
        android:name="com.rf.macgyver.ui.main.fragment.inspection.Step3IPFragment"
        android:label="Step3IPFragment"
        tools:layout="@layout/fragment_step3_ip">

    </fragment>

</navigation>