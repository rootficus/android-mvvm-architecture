<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headingCard"
        android:backgroundTint="#123456"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/backArrowBtn"
                android:src="@drawable/vector__6_"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/AddVehicleHeading"
                app:layout_constraintTop_toTopOf="@id/AddVehicleHeading"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AddVehicleHeading"
                android:text="Add Vehicle"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/backArrowBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveBtn"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/AddVehicleHeading"
                app:layout_constraintBottom_toBottomOf="@id/AddVehicleHeading">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveTxt"
                    android:text="Save"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text_border"
                    android:textColor="@color/white"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="15dp"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/etVehicleNo"
        android:hint="Vehicle #"
        app:layout_constraintTop_toBottomOf="@id/headingCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/warningTxt"
        android:text="*Vehicle no. should be unique."
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/etVehicleNo"
        app:layout_constraintStart_toStartOf="@id/etVehicleNo"
        android:layout_margin="2dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/etVehicleCategory"
        android:hint="Vehicle Category"
        app:layout_constraintTop_toBottomOf="@id/warningTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/etVehicleName"
        android:hint="Vehicle Name"
        app:layout_constraintTop_toBottomOf="@id/etVehicleCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/etVINNo"
        android:hint="VIN #"
        app:layout_constraintTop_toBottomOf="@id/etVehicleName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>