<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_gray">
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_2sdp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.appcompat.widget.AppCompatImageView
               android:id="@+id/imageClose"
               android:layout_width="@dimen/_15sdp"
               android:layout_height="@dimen/_15sdp"
               android:layout_gravity="end"
               android:layout_marginStart="@dimen/_4sdp"
               android:src="@drawable/ic_left_arrow"
               android:backgroundTint="@color/textColor"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               />

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/label_title"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:padding="@dimen/_5sdp"
               android:text="@string/sms_detail"
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="@color/textColor"
               android:textSize="@dimen/_11sdp"
               android:fontFamily="@font/roboto_medium"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintWidth_percent="0.5" />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/sender"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/label_sender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_sender"
        app:layout_constraintWidth_percent="0.5" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_c_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/receiver"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_sender"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_c_receiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/label_c_receiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_c_receiver"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_sms_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/sms_type"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_c_receiver"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sms_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/label_sms_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_sms_type"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_sim_slot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/sim_slot"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_sms_type"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sim_slot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/label_sim_slot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_sim_slot"
        app:layout_constraintWidth_percent="0.5" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/date"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_sim_slot"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/label_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_date"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_a_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:text="@string/message"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_date"
        app:layout_constraintWidth_percent="0.5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_a_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:textColor="@color/textColor"
        android:padding="@dimen/_5sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_a_message"
        app:layout_constraintWidth_percent="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/text_a_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>