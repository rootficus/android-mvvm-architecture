<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signInModel"
            type="com.rf.macgyver.ui.main.viewmodel.DashBoardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step1Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step1Icon"
                    android:text="1"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step1Txt"
                    android:text="Step 1"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/step1Icon"
                    app:layout_constraintStart_toEndOf="@id/step1Icon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inspectionInfoTxt"
                    android:text="Inspection Info"
                    android:textSize="12sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/step1Icon"
                    app:layout_constraintStart_toEndOf="@id/step1Icon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step2Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/step1Card"
            app:layout_constraintEnd_toStartOf="@id/step3Card"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintBottom_toBottomOf="@id/step1Card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step2Icon"
                    android:text="2"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step2Txt"
                    android:text="Step 2"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/step2Icon"
                    app:layout_constraintStart_toEndOf="@id/step2Icon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doInspectiontxt"
                    android:text="Do Inpection"
                    android:textSize="12sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/step2Icon"
                    app:layout_constraintStart_toEndOf="@id/step2Icon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step3Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintBottom_toBottomOf="@id/step1Card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/threeTxt"
                    android:text="3"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step3Txt"
                    android:text="Step 3"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/threeTxt"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/summaryTxt"
                    android:text="Summary"
                    android:textSize="12sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/threeTxt"
                    app:layout_constraintStart_toEndOf="@id/threeTxt"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/incidentDetailsCard"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toBottomOf="@id/step1Card"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:backgroundTint="#123456"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/incidentDetailsHeading"
                    android:text="Incident Details"
                    android:textAlignment="center"
                    android:background="#123456"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etIncidentNoId"
                    android:hint="Incident No."
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/incidentDetailsHeading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etIncidentDateId"
                    android:hint="Incident Date"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/etIncidentNoId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etIncidentTimeId"
                    android:hint="Incident Time"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/etIncidentDateId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etIncidentLocationId"
                    android:hint="Incident Location"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/etIncidentTimeId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/vehicleDetailsCard"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toBottomOf="@id/incidentDetailsCard"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:backgroundTint="#123456"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicleDetailsHeading"
                    android:text="Vehicle Details"
                    android:textAlignment="center"
                    android:background="#123456"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etVehicleNo"
                    android:hint="Vehicle No."
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/vehicleDetailsHeading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etVehicleName"
                    android:hint="Vehicle Name"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/etVehicleNo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etOperatorNameId"
                    android:hint="Operator Name"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/etVehicleName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/typesOfIncidentCard"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toBottomOf="@id/vehicleDetailsCard"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:backgroundTint="#123456"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TypesOfIncidentHeading"
                    android:text="Types of Incident (Check one or more)"
                    android:textAlignment="center"
                    android:background="#123456"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brakeFailureCB"
                    android:text="Break Failure"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/TypesOfIncidentHeading"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chemicalSpillsCB"
                    android:text="Chemical Spills"
                    app:layout_constraintEnd_toStartOf="@id/collisionCB"
                    app:layout_constraintTop_toTopOf="@id/brakeFailureCB"
                    app:layout_constraintStart_toEndOf="@id/brakeFailureCB"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/collisionCB"
                    android:text="Collision"
                    app:layout_constraintTop_toTopOf="@id/brakeFailureCB"
                    app:layout_constraintStart_toEndOf="@id/chemicalSpillsCB"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelOrNextCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:layout_marginBottom="70dp"
            android:elevation="12dp"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancelTxt"
                    android:text="Cancel"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextTxt"
                    android:text="Next >>"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>