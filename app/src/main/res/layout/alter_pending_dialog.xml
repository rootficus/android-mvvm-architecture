<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/_2sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_12sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBank"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageBank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/bank_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelCustomerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/cash_in"
                android:textColor="@color/homeTextColor"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/cardBank"
                app:layout_constraintTop_toBottomOf="@id/cardBank" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/txn_id"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelCustomerNumber" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:lines="1"
                android:maxLength="15"
                android:text="XXXXXXX"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/txtTransactionId"
                app:layout_constraintStart_toStartOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelCustomerNumber"
                app:layout_constraintTop_toTopOf="@id/labelTransactionId" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconTransactionCopy"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/copy_text"
                android:tint="@color/homeTextColor"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/txtTransactionId"
                app:layout_constraintTop_toTopOf="@id/txtTransactionId" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconCopy"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/copy_text"
                android:tint="@color/homeTextColor"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toTopOf="@id/txtPayeeNumber" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelBankType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/banktype"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelTransactionId" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtBankType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/labelAmount"
                app:layout_constraintStart_toStartOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelTransactionId"
                app:layout_constraintTop_toTopOf="@id/labelBankType" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelPayeeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/payee_number"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/labelCustomerNumber"
                app:layout_constraintTop_toBottomOf="@id/labelBankType" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPayeeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/txtBankType"
                app:layout_constraintTop_toTopOf="@id/labelPayeeNumber" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/amount"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelPayeeNumber" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="৳‎1000.00"
                android:textColor="@color/reject"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/labelAmount"
                app:layout_constraintStart_toStartOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelBankType"
                app:layout_constraintTop_toTopOf="@id/labelAmount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/date"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/txtAmount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/poppins"
                android:text="00/00/00 00:00 PM"
                android:textAlignment="center"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/iconDate"
                app:layout_constraintTop_toBottomOf="@id/txtAmount"
                app:layout_constraintTop_toTopOf="@id/labelDate" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconDate"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/calendar_icon"
                android:tint="@color/homeTextColor"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/txtDate"
                app:layout_constraintEnd_toStartOf="@id/txtDate"
                app:layout_constraintStart_toEndOf="@id/txtDate"
                app:layout_constraintStart_toStartOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toTopOf="@id/txtDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:text="@string/reject_note"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/cardBank"
                app:layout_constraintStart_toStartOf="@id/labelPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:lines="3"
                android:textColor="@color/homeTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconDate"
                app:layout_constraintStart_toStartOf="@id/txtPayeeNumber"
                app:layout_constraintTop_toBottomOf="@id/labelDate"
                app:layout_constraintTop_toTopOf="@id/labelNote" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSuccess"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/activeGreenBg"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Success"
                android:textColor="@color/activeGreen"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNote" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>