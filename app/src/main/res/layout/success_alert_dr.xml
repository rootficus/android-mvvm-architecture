<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/successTxt"
        android:text="Success"
        android:textSize="20sp"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/group_11"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingTxt"
        android:text="Inspection Report Generated"
        android:textSize="16sp"
        android:textColor="#767676"
        android:textStyle="bold"
        android:layout_marginVertical="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/successTxt"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backTxt"
        android:text="Back"
        android:drawableStart="@drawable/vector__6_"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:layout_marginVertical="25dp"
        android:paddingBottom="30dp"
        android:textColor="#076BFF"
        app:layout_constraintTop_toBottomOf="@id/headingTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewReportTxt"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewReportTxt"
        android:text="View Report"
        android:paddingBottom="30dp"
        android:textSize="18sp"
        android:textColor="#076BFF"
        app:layout_constraintTop_toTopOf="@id/backTxt"
        app:layout_constraintBottom_toBottomOf="@id/backTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backTxt"/>


</androidx.constraintlayout.widget.ConstraintLayout>