<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSrNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sr_no"
            android:textSize="@dimen/_8sdp"
            android:textAlignment="center"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.09" />

        <TextView
            android:id="@+id/viewDivide1"
            android:layout_width="1sp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@color/divideColor"
            app:layout_constraintStart_toEndOf="@id/txtSrNo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/customer_no"
            android:textSize="@dimen/_8sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textAlignment="center"
            android:ellipsize="middle"
            app:layout_constraintStart_toEndOf="@id/viewDivide1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20" />
        <TextView
            android:id="@+id/viewDivide2"
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@color/divideColor"
            app:layout_constraintStart_toEndOf="@id/txtCAccount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:text="@string/amount"
            android:textAlignment="center"
            android:ellipsize="middle"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@id/viewDivide2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20" />
        <TextView
            android:id="@+id/viewDivide3"
            android:layout_width="1sp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@color/divideColor"
            app:layout_constraintStart_toEndOf="@id/txtAmount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTransactionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:text="@string/transaction_id"
            android:textAlignment="center"
            android:ellipsize="middle"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@id/viewDivide3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.20" />
        <TextView
            android:id="@+id/viewDivide4"
            android:layout_width="1sp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@color/divideColor"
            app:layout_constraintStart_toEndOf="@id/txtTransactionId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:text="@string/date"
            android:textAlignment="center"
            android:ellipsize="middle"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@id/viewDivide4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.14" />
        <TextView
            android:id="@+id/viewDivide5"
            android:layout_width="1sp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@color/divideColor"
            app:layout_constraintStart_toEndOf="@id/txtDate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8sdp"
            android:text="@string/status"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/viewDivide5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.16" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>