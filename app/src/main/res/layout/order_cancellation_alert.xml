<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/app_icon"
        android:layout_marginTop="70dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TxtLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_label"
        android:text="Are you sure you want to cancel the requested order?"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textSize="33sp"
        android:textColor="@color/black"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/EnterReasonLabel"
        app:layout_constraintTop_toBottomOf="@id/TxtLabel"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.33"
        android:layout_marginTop="50dp"
        android:background="#F4F4F4"/>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/NoButtonLabel"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/EnterReasonLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/YesButtonLabel"
        android:elevation="25dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintWidth_percent="0.23"
        app:cardBackgroundColor="#E6352D">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NO"
            android:layout_margin="20dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/YesButtonLabel"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/EnterReasonLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/NoButtonLabel"
        app:cardCornerRadius="30dp"
        app:layout_constraintWidth_percent="0.23"
        app:cardBackgroundColor="#03AC00">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"
            android:layout_margin="20dp"
            android:layout_marginHorizontal="50dp"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>