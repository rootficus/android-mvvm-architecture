<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signInModel"
            type="com.rf.macgyver.ui.main.viewmodel.DashBoardViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragment.inspection.Step3IPFragment">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step1Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step1Icon"
                    android:src="@drawable/group_11"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step1Txt"
                    android:text="Step 1"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/step1Icon"
                    app:layout_constraintStart_toEndOf="@id/step1Icon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inspectionInfoTxt"
                    android:text="Inspection Info."
                    android:textSize="13sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/step1Icon"
                    app:layout_constraintStart_toEndOf="@id/step1Icon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step2Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/step1Card"
            app:layout_constraintEnd_toStartOf="@id/step3Card"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintBottom_toBottomOf="@id/step1Card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/step2Icon"
                    android:src="@drawable/group_11"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step2Txt"
                    android:text="Step 2"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/step2Icon"
                    app:layout_constraintStart_toEndOf="@id/step2Icon"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/doInspectiontxt"
                    android:text="Do Inspection"
                    android:textSize="13sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/step2Icon"
                    app:layout_constraintStart_toEndOf="@id/step2Icon"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step3Card"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintBottom_toBottomOf="@id/step1Card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/threeTxt"
                    android:text="3"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/small_rounded_textview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Step3Txt"
                    android:text="Step 3"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/threeTxt"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/summaryTxt"
                    android:text="Summary"
                    android:textSize="13sp"
                    android:textColor="#808080"
                    app:layout_constraintBottom_toBottomOf="@id/threeTxt"
                    app:layout_constraintStart_toEndOf="@id/threeTxt"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faultyItemsHeading"
            android:text="Faulty Items"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step1Card"
            android:layout_marginHorizontal="8dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/faultyItemsNo."
            android:text="9"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D3494E"
            app:layout_constraintTop_toTopOf="@id/faultyItemsHeading"
            app:layout_constraintBottom_toBottomOf="@id/faultyItemsHeading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="12dp"/>
        <View
            android:id="@+id/idView1"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@id/faultyItemsHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overallCondHeading"
            android:text="Overall Condition"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="@id/faultyItemsHeading"
            app:layout_constraintTop_toBottomOf="@id/idView1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overallCondSelectId."
            android:text="Select"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#8EBCFF"
            app:layout_constraintTop_toTopOf="@id/overallCondHeading"
            app:layout_constraintBottom_toBottomOf="@id/overallCondHeading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="12dp"/>
        <View
            android:id="@+id/idView2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@id/overallCondHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleStatusHeading"
            android:text="Vehicle Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="@id/faultyItemsHeading"
            app:layout_constraintTop_toBottomOf="@id/idView2"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleStatusCard"
            app:layout_constraintTop_toBottomOf="@id/vehicleStatusHeading"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/availableBtn"
                    android:text="Available"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/availableBtn"
                    app:layout_constraintBottom_toBottomOf="@id/availableBtn"
                    android:background="@color/black"
                    app:layout_constraintStart_toEndOf="@id/availableBtn"
                    app:layout_constraintEnd_toStartOf="@id/maintenanceRequiredId"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/maintenanceRequiredId"
                    android:text="Maintenance Required"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="@id/availableBtn"
                    app:layout_constraintStart_toEndOf="@id/availableBtn"
                    app:layout_constraintBottom_toBottomOf="@id/availableBtn"
                    app:layout_constraintEnd_toStartOf="@id/breakdownBtn"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/availableBtn"
                    app:layout_constraintBottom_toBottomOf="@id/availableBtn"
                    android:background="@color/black"
                    app:layout_constraintStart_toEndOf="@id/maintenanceRequiredId"
                    app:layout_constraintEnd_toStartOf="@id/breakdownBtn"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/breakdownBtn"
                    android:text="Breakdown"
                    android:padding="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priorityHeading"
            android:text="Priority"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="@id/faultyItemsHeading"
            app:layout_constraintTop_toBottomOf="@id/vehicleStatusCard"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priorityCard"
            app:layout_constraintTop_toBottomOf="@id/priorityHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"
            android:layout_margin="15dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lowId"
                    android:text="low"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_weight="2"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mediumId"
                    android:text="medium"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_weight="2"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/highId"
                    android:text="high"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_weight="2"/>
                <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/emergencyId"
                    android:text="emergency"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_weight="3"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/idView3"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@id/priorityCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleSafeHeading"
            android:text="Vehicle safe to use"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="@id/faultyItemsHeading"
            app:layout_constraintTop_toBottomOf="@id/idView3"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/vehicleSafeToUseCard"
            app:layout_constraintWidth_percent="0.3"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/vehicleSafeHeading"
            app:layout_constraintBottom_toBottomOf="@id/vehicleSafeHeading"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/safeVehicleYesBtn"
                    android:text="Yes"
                    android:padding="8dp"
                    android:textAlignment="center"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:layout_width="1.5dp"
                    android:layout_height="0dp"
                    android:background="@color/black"
                    app:layout_constraintStart_toEndOf="@id/safeVehicleYesBtn"
                    app:layout_constraintTop_toTopOf="@id/safeVehicleYesBtn"
                    app:layout_constraintBottom_toBottomOf="@id/safeVehicleYesBtn"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/safeVehicleNoBtn"
                    android:text="NO"
                    android:padding="8dp"
                    android:textAlignment="center"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/idView4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@id/vehicleSafeHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DeployedHeading"
            android:text="Deployed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="@id/faultyItemsHeading"
            app:layout_constraintTop_toBottomOf="@id/idView4"/>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/deployedCard"
            app:layout_constraintWidth_percent="0.3"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/DeployedHeading"
            app:layout_constraintBottom_toBottomOf="@id/DeployedHeading"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/deployedYesBtn"
                    android:text="Yes"
                    android:padding="8dp"
                    android:textAlignment="center"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:background="@color/black"
                app:layout_constraintStart_toEndOf="@id/deployedYesBtn"
                app:layout_constraintTop_toTopOf="@id/deployedYesBtn"
                app:layout_constraintBottom_toBottomOf="@id/deployedYesBtn"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/deplpyedNoBtn"
                    android:text="NO"
                    android:padding="8dp"
                    android:textAlignment="center"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/idView5"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toBottomOf="@id/DeployedHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etAdditionalNote"
            android:hint="Additional Note"
            app:layout_constraintTop_toBottomOf="@id/idView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            android:padding="12dp"
            app:layout_constraintWidth_percent="0.85"
            android:background="@drawable/edit_text_border"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/InspectorSignatureHeading"
            android:text="Inspector Signature"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginVertical="8dp"
            android:textColor="#808080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAdditionalNote"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/signatureCard"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toBottomOf="@id/InspectorSignatureHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/backOrGenerateCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.8"
            android:layout_marginBottom="50dp"
            android:elevation="15dp"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backTxt"
                    android:text="Back"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/generateReportTxt"
                    android:text="Generate Report"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>