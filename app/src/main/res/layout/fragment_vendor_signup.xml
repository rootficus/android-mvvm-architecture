<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dashBoardViewModel"
            type="com.rf.macgyver.ui.main.viewmodel.DashBoardViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragment.VendorSignupFragment"
        android:layout_margin="8dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingLabel"
            android:text="@string/enter_restaurant_details"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#033500"
            android:layout_marginVertical="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ImageId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headingLabel"
            android:src="@drawable/person_4"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintHeight_percent="0.17"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etnameHeading"
            android:text="@string/restaurant_s_name"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:paddingHorizontal="5dp"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ImageId"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/etName"
            android:padding="8dp"
            android:background="@drawable/edittext_rounded_corners"
            app:layout_constraintStart_toStartOf="@id/etnameHeading"
            app:layout_constraintTop_toBottomOf="@id/etnameHeading"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.055"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etAddressHeading"
            android:text="@string/address_"
            android:textSize="16sp"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="@id/etnameHeading"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/etAddress"
            android:padding="8dp"
            android:background="@drawable/edittext_rounded_corners"
            app:layout_constraintStart_toStartOf="@id/etAddressHeading"
            app:layout_constraintTop_toBottomOf="@id/etAddressHeading"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintHeight_percent="0.055"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etPhoneHeading"
            android:text="@string/phone_no"
            android:textSize="16sp"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="@id/etnameHeading"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/etPhoneNo"
            android:inputType="phone"
            android:padding="8dp"
            android:background="@drawable/edittext_rounded_corners"
            app:layout_constraintHeight_percent="0.055"
            app:layout_constraintStart_toStartOf="@id/etPhoneHeading"
            app:layout_constraintTop_toBottomOf="@id/etPhoneHeading"
            app:layout_constraintWidth_percent="0.85"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoriesHeading"
            android:text="@string/categories"
            android:textSize="16sp"
            android:paddingHorizontal="5dp"
            android:layout_marginVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/etPhoneNo"
            app:layout_constraintStart_toStartOf="@id/etPhoneNo"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/breakfastCB"
            android:text="@string/breakfast"
            app:buttonTint="#033500"
            app:layout_constraintTop_toBottomOf="@id/categoriesHeading"
            app:layout_constraintStart_toStartOf="@id/etPhoneNo"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lunchCB"
            android:text="@string/lunch"
            app:buttonTint="#033500"
            app:layout_constraintTop_toBottomOf="@id/breakfastCB"
            app:layout_constraintStart_toStartOf="@id/etPhoneNo"/>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dinnerCB"
            android:text="@string/dinner"
            app:buttonTint="#033500"
            app:layout_constraintTop_toBottomOf="@id/lunchCB"
            app:layout_constraintStart_toStartOf="@id/etPhoneNo"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/continueBtn"
            android:text="Continue"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded_corners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintTop_toBottomOf="@id/dinnerCB"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>