<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:paddingBottom="18dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/doubleZeroId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="00"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/zeroId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/doubleZeroId"
            app:layout_constraintEnd_toStartOf="@id/decimalId"
            app:layout_constraintStart_toEndOf="@id/doubleZeroId"
            app:layout_constraintTop_toTopOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/decimalId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="."
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/doubleZeroId"
            app:layout_constraintEnd_toStartOf="@id/equalSignId"
            app:layout_constraintStart_toEndOf="@id/zeroId"
            app:layout_constraintTop_toTopOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/equalSignId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/green_rounded_textview"
            android:gravity="center"
            android:text="="
            android:textAlignment="center"
            android:textColor="@color/activeCard"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/doubleZeroId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/doubleZeroId"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/oneBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/doubleZeroId"
            app:layout_constraintEnd_toEndOf="@id/doubleZeroId"
            app:layout_constraintStart_toStartOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/twoBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="2"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/oneBtnId"
            app:layout_constraintEnd_toEndOf="@id/zeroId"
            app:layout_constraintStart_toEndOf="@id/oneBtnId"
            app:layout_constraintStart_toStartOf="@id/zeroId"
            app:layout_constraintTop_toTopOf="@id/oneBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/threeBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="3"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/oneBtnId"
            app:layout_constraintEnd_toEndOf="@id/decimalId"
            app:layout_constraintStart_toEndOf="@id/twoBtnId"
            app:layout_constraintStart_toStartOf="@id/decimalId"
            app:layout_constraintTop_toTopOf="@id/oneBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/plusBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@id/oneBtnId"
            app:layout_constraintEnd_toEndOf="@id/equalSignId"
            app:layout_constraintStart_toEndOf="@id/threeBtnId"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintTop_toTopOf="@id/oneBtnId"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fourBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="4"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/oneBtnId"
            app:layout_constraintEnd_toEndOf="@id/doubleZeroId"
            app:layout_constraintStart_toStartOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fiveBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="5"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/fourBtnId"
            app:layout_constraintEnd_toEndOf="@id/zeroId"
            app:layout_constraintStart_toEndOf="@id/fourBtnId"
            app:layout_constraintStart_toStartOf="@id/zeroId"
            app:layout_constraintTop_toTopOf="@id/fourBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sixBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="6"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/fourBtnId"
            app:layout_constraintEnd_toEndOf="@id/decimalId"
            app:layout_constraintStart_toEndOf="@id/fiveBtnId"
            app:layout_constraintStart_toStartOf="@id/decimalId"
            app:layout_constraintTop_toTopOf="@id/fourBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minusBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@id/fourBtnId"
            app:layout_constraintEnd_toEndOf="@id/equalSignId"
            app:layout_constraintStart_toEndOf="@id/sixBtnId"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintTop_toTopOf="@id/fourBtnId"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sevenBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="7"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/fourBtnId"
            app:layout_constraintEnd_toEndOf="@id/doubleZeroId"
            app:layout_constraintStart_toStartOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/eightBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="8"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/sevenBtnId"
            app:layout_constraintEnd_toEndOf="@id/zeroId"
            app:layout_constraintStart_toEndOf="@id/sevenBtnId"
            app:layout_constraintStart_toStartOf="@id/zeroId"
            app:layout_constraintTop_toTopOf="@id/sevenBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nineBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="9"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/sevenBtnId"
            app:layout_constraintEnd_toEndOf="@id/decimalId"
            app:layout_constraintStart_toEndOf="@id/eightBtnId"
            app:layout_constraintStart_toStartOf="@id/decimalId"
            app:layout_constraintTop_toTopOf="@id/sevenBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/multiplyBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="*"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/sevenBtnId"
            app:layout_constraintEnd_toEndOf="@id/equalSignId"
            app:layout_constraintStart_toEndOf="@id/nineBtnId"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintTop_toTopOf="@id/sevenBtnId"
            app:layout_constraintWidth_percent="0.25" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/CBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="C"
            android:textAlignment="center"
            android:textColor="#db332a"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/sevenBtnId"
            app:layout_constraintEnd_toEndOf="@id/doubleZeroId"
            app:layout_constraintStart_toStartOf="@id/doubleZeroId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bracketsBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="( )"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/CBtnId"
            app:layout_constraintEnd_toEndOf="@id/zeroId"
            app:layout_constraintStart_toEndOf="@id/CBtnId"
            app:layout_constraintStart_toStartOf="@id/zeroId"
            app:layout_constraintTop_toTopOf="@id/CBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/percentBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="%"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/CBtnId"
            app:layout_constraintEnd_toEndOf="@id/decimalId"
            app:layout_constraintStart_toEndOf="@id/bracketsBtnId"
            app:layout_constraintStart_toStartOf="@id/decimalId"
            app:layout_constraintTop_toTopOf="@id/CBtnId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/divideBtnId"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="/"
            android:textAlignment="center"
            android:textColor="#569415"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@id/CBtnId"
            app:layout_constraintEnd_toEndOf="@id/equalSignId"
            app:layout_constraintStart_toEndOf="@id/percentBtnId"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintTop_toTopOf="@id/CBtnId"
            app:layout_constraintWidth_percent="0.25" />

        <View
            android:id="@+id/idView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="32dp"
            android:layout_marginBottom="40dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintBottom_toTopOf="@id/CBtnId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent" />

        <!--<androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/clockIconId"
            android:src="@drawable/iconmonstr_clock_thin"
            android:layout_margin="22dp"
            app:layout_constraintWidth_percent="0.044"
            app:layout_constraintStart_toStartOf="@id/CBtnId"
            app:layout_constraintEnd_toEndOf="@id/CBtnId"
            app:layout_constraintBottom_toTopOf="@id/idView"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/rulerIconId"
            android:src="@drawable/ruler_horizontal_svgrepo_com__1_"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintHeight_percent="0.032"
            app:layout_constraintTop_toTopOf="@id/clockIconId"
            app:layout_constraintBottom_toBottomOf="@id/clockIconId"
            app:layout_constraintStart_toEndOf="@id/clockIconId"
            app:layout_constraintWidth_percent="0.05"/>-->
        <!--<androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteIconId"
            android:text="X"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toTopOf="@id/clockIconId"
            app:layout_constraintBottom_toBottomOf="@id/clockIconId"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintWidth_percent="0.041"/>-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deleteIconId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/delete_text_svgrepo_com"
            app:layout_constraintBottom_toTopOf="@id/idView"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="@id/equalSignId"
            app:layout_constraintWidth_percent="0.049" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="25dp"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@id/deleteIconId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>