<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.fragment.incidentReport.Step2IRFragment">
    <data>

        <variable
            name="signInModel"
            type="com.rf.macgyver.ui.main.viewmodel.DashBoardViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/step1Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="12dp"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.32">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/step1Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_rounded_textview"
                    android:src="@drawable/group_11"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Step1Txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Step 1"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/step1Icon"
                    app:layout_constraintTop_toTopOf="@id/step1Icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/inspectionInfoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inspection Info."
                    android:textColor="#808080"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/step1Icon"
                    app:layout_constraintStart_toEndOf="@id/step1Icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/step2Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@id/step1Card"
            app:layout_constraintEnd_toStartOf="@id/step3Card"
            app:layout_constraintStart_toEndOf="@id/step1Card"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintWidth_percent="0.32">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/step2Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_rounded_textview"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Step2Txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Step 2"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/step2Icon"
                    app:layout_constraintTop_toTopOf="@id/step2Icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/doInspectiontxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do Inspection"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/step2Icon"
                    app:layout_constraintStart_toEndOf="@id/step2Icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/step3Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@id/step1Card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintWidth_percent="0.32">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/threeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_rounded_textview"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/Step3Txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Step 3"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/threeTxt"
                    app:layout_constraintTop_toTopOf="@id/threeTxt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/summaryTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textColor="#808080"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/threeTxt"
                    app:layout_constraintStart_toEndOf="@id/threeTxt" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/otherInformationCard"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/step1Card"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:backgroundTint="#123456"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/otherInfoHeading"
                    android:text="Other Information"
                    android:background="#123456"
                    android:textStyle="bold"
                    android:padding="9dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/etIncidentAreaId"
                    android:hint="Incident Area"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/otherInfoHeading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/IncidentSeverityRatingHeading"
                    android:text="Incident Severity"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:layout_marginVertical="12dp"
                    app:layout_constraintTop_toBottomOf="@id/etIncidentAreaId"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Spinner
                    android:id="@+id/incidentSeveritySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/IncidentSeverityRatingHeading"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:id="@+id/idView1"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#D3D3D3"
                    android:paddingHorizontal="5dp"
                    app:layout_constraintTop_toBottomOf="@id/incidentSeveritySpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weatherConditionHeading"
                    android:text="Weather Condition"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/idView1"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Spinner
                    android:id="@+id/weatherConditionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/weatherConditionHeading"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:id="@+id/idView2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#D3D3D3"
                    android:paddingHorizontal="5dp"
                    app:layout_constraintTop_toBottomOf="@id/weatherConditionSpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicleActivityHeading"
                    android:text="Vehicle activity at the time of incident"
                    android:textSize="16sp"
                    android:layout_marginVertical="10dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/idView2"
                    app:layout_constraintStart_toStartOf="parent"/>

                <Spinner
                    android:id="@+id/vehicleActivitySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/vehicleActivityHeading"
                    app:layout_constraintStart_toStartOf="parent"/>
                <View
                    android:id="@+id/idView3"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#D3D3D3"
                    android:paddingHorizontal="5dp"
                    app:layout_constraintTop_toBottomOf="@id/vehicleActivitySpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/IncidentImgCard"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintTop_toBottomOf="@id/otherInformationCard"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="15dp"
            android:elevation="8dp"
            android:backgroundTint="#123456"
            app:cardCornerRadius="5dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@color/white">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/incidentImgHeading"
                    android:text="Click Incident Images"
                    android:textAlignment="center"
                    android:background="#123456"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/backOrCompletedCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:elevation="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/backTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textSize="20sp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/completedTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed>"
                    android:textSize="20sp"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>