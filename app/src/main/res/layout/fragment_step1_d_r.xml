<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signInModel"
            type="com.rf.macgyver.ui.main.viewmodel.DashBoardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.fragment.inspection.Step1IPFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/step1Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintWidth_percent="0.33">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/step1Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/small_rounded_textview"
                android:backgroundTint="#8EBCFF"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Step1Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Step 1"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/step1Icon"
                app:layout_constraintTop_toTopOf="@id/step1Icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/inspectionInfoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Inspection Info"
                android:textColor="#808080"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/step1Icon"
                app:layout_constraintStart_toEndOf="@id/step1Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/step2Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="@dimen/_5sdp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@id/step1Card"
            app:layout_constraintEnd_toStartOf="@id/step3Card"
            app:layout_constraintStart_toEndOf="@id/step1Card"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintWidth_percent="0.33">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/step2Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/small_rounded_textview"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Step2Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Step 2"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/step2Icon"
                app:layout_constraintTop_toTopOf="@id/step2Icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/doInspectiontxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Do Inpection"
                android:textColor="#808080"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/step2Icon"
                app:layout_constraintStart_toEndOf="@id/step2Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/step3Card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="@dimen/_5sdp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@id/step1Card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/step1Card"
            app:layout_constraintWidth_percent="0.33">

            <TextView
                android:id="@+id/threeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/small_rounded_textview"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Step3Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Step 3"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/threeTxt"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/summaryTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Summary"
                android:textColor="#808080"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/threeTxt"
                app:layout_constraintStart_toEndOf="@id/threeTxt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="Date : 09/04/2024"
            android:textColor="@color/primaryDarkColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/step1Card" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dateCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeading"
            app:layout_constraintWidth_percent="0.8">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Mtxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="M"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Ttxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="T"
                android:textAlignment="center"
                android:textSize="16sp"
                android:paddingVertical="10dp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Mtxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Wtxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Ttxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Thurstxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="T"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Wtxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Ftxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="F"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Thurstxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Sattxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Ftxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Sundaytxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/Mtxt"
                app:layout_constraintStart_toEndOf="@id/Sattxt"
                app:layout_constraintTop_toTopOf="@id/Mtxt"
                app:layout_constraintWidth_percent="0.14" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/reportCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="#D3D3D3"
            app:layout_constraintEnd_toEndOf="@id/dateCard"
            app:layout_constraintStart_toStartOf="@id/dateCard"
            app:layout_constraintTop_toBottomOf="@id/dateCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:paddingVertical="@dimen/_8sdp">

                <TextView
                    android:id="@+id/reportHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Report#"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reportName"
                    android:layout_margin="5dp"
                    android:backgroundTint="#D3D3D3"
                    android:fontFamily="@font/roboto_regular"
                    android:text="HVI 1001"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/reportHeading"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/reportHeading" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/nameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:padding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Name"
            android:background="@drawable/edit_text_border"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reportCard" />

        <View
            android:id="@+id/idView1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="12dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shiftHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15.60dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="Shift"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idView1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shift3Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Shift 3"
            app:layout_constraintBottom_toBottomOf="@id/shiftHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/shiftHeading" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shift2Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Shift 2"
            app:layout_constraintBottom_toBottomOf="@id/shiftHeading"
            app:layout_constraintEnd_toStartOf="@id/shift3Btn"
            app:layout_constraintTop_toTopOf="@id/shiftHeading" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shift1Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:text="Shift 1"
            app:layout_constraintBottom_toBottomOf="@id/shiftHeading"
            app:layout_constraintEnd_toStartOf="@id/shift2Btn"
            app:layout_constraintTop_toTopOf="@id/shiftHeading" />

        <View
            android:id="@+id/idView2"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="18dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shiftHeading" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vehicleHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15.60dp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="Vehicle"
            android:textSize="14sp"
            android:textColor="#808080"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idView2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vehicleSelectTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="Select"
            android:textColor="#407AFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/vehicleHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/vehicleHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vehicleContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:fontFamily="@font/roboto_regular"
            android:text="NO63850237"
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vehicleHeading" />

        <View
            android:id="@+id/idView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="18dp"
            android:background="#D3D3D3"
            android:paddingHorizontal="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vehicleContent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inspectionFormHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="12dp"
            android:text="Inspection Form"
            android:textColor="#808080"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idView3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/formSelectTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:text="Select"
            android:textColor="#407AFF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/inspectionFormHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/inspectionFormHeading" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/InspectionformContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:text="Air compression inspection"
            android:textColor="#808080"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inspectionFormHeading" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cancelOrNextCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:elevation="12dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.8">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cancelTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/cancel"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/nextTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/next2arrow"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
