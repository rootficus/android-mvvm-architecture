<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cam1"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/rectangle_2017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camPlus1"
        android:src="@drawable/vector__15_"
        app:layout_constraintStart_toStartOf="@id/cam1"
        app:layout_constraintEnd_toEndOf="@id/cam1"
        app:layout_constraintTop_toTopOf="@id/cam1"
        app:layout_constraintBottom_toBottomOf="@id/cam1"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cam2"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/rectangle_2017"
        app:layout_constraintStart_toEndOf="@id/cam1"
        app:layout_constraintTop_toTopOf="@id/cam1"
        app:layout_constraintBottom_toBottomOf="@id/cam1"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camPlus2"
        android:src="@drawable/vector__15_"
        app:layout_constraintStart_toStartOf="@id/cam2"
        app:layout_constraintEnd_toEndOf="@id/cam2"
        app:layout_constraintTop_toTopOf="@id/cam2"
        app:layout_constraintBottom_toBottomOf="@id/cam2"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cancelOrDoneCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="45dp"
        android:elevation="12dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="5dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/doneTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="5dp"
                android:text="Done"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>