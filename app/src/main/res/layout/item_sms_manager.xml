<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="10dp"
            android:background="@color/cardBgColor"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_sr_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:textAlignment="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.04" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:textAlignment="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/txt_sr_no"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_7sdp"
                android:textAlignment="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/txt_sender"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.38" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_receiver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:textAlignment="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/txt_sms"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8sdp"
                android:textAlignment="center"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/txt_receiver"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.18" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/card_head"/>

</androidx.constraintlayout.widget.ConstraintLayout>