<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:elevation="15dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/_150857814"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:elevation="15dp"
                android:text="food"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/img_label"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginStart="3dp"
                android:text="Time - "
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/img_label"
                app:layout_constraintTop_toBottomOf="@id/QuantityTxt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="00.00"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/timeTxt"
                app:layout_constraintStart_toEndOf="@id/timeTxt"
                app:layout_constraintTop_toTopOf="@id/timeTxt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/QuantityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Quantity - "
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/img_label"
                app:layout_constraintTop_toBottomOf="@id/itemName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/count_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/QuantityTxt"
                app:layout_constraintStart_toEndOf="@id/QuantityTxt"
                app:layout_constraintTop_toTopOf="@id/QuantityTxt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/singleItemCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="00"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/multiplyCount"
                app:layout_constraintEnd_toStartOf="@id/multiplySign"
                app:layout_constraintTop_toTopOf="@id/multiplyCount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/multiplySign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="*"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/multiplyCount"
                app:layout_constraintEnd_toStartOf="@id/multiplyCount"
                app:layout_constraintTop_toTopOf="@id/multiplyCount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/multiplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="11sp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="@id/totalCost"
                app:layout_constraintEnd_toStartOf="@id/equalSign" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/equalSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="11sp"
                android:layout_marginBottom="3dp"
                app:layout_constraintBottom_toBottomOf="@id/totalCost"
                app:layout_constraintEnd_toStartOf="@id/totalCost" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:text="00"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingStart="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>