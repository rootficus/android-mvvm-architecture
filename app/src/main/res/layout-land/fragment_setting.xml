<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dashBoardViewModel"
            type="com.rf.utellRestaurant.ui.main.viewmodel.DashBoardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:background="@color/bgPrimaryColor">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/settingsHeadingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="#F4F4F4"
            android:fontFamily="@font/poppins"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="Store Setting"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/StoreEnableText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:text="Store Enable"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/StoreEnableSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settingsHeadingLabel"
            app:layout_constraintTop_toTopOf="@id/StoreEnableSwitch"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/StoreEnableSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/StoreEnableText"
            app:layout_constraintTop_toBottomOf="@id/settingsHeadingLabel"
            app:layout_constraintWidth_percent="0.3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/OrderAlertText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:text="New Order Alert"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/orderAlertSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/StoreEnableText"
            app:layout_constraintTop_toTopOf="@id/orderAlertSwitch"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/orderAlertSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/OrderAlertText"
            app:layout_constraintTop_toBottomOf="@id/StoreEnableSwitch"
            app:layout_constraintWidth_percent="0.3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ConfirmOrderText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:text="Auto Confirm New order"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/confirmOrderSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/OrderAlertText"
            app:layout_constraintTop_toTopOf="@id/confirmOrderSwitch"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/confirmOrderSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderAlertSwitch"
            app:layout_constraintWidth_percent="0.3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/batteryAlertText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:text="Low Battery Alert"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/batteryAlertSwitch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ConfirmOrderText"
            app:layout_constraintTop_toTopOf="@id/batteryAlertSwitch"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/batteryAlertSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirmOrderSwitch"
            app:layout_constraintWidth_percent="0.3" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/printerSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="Printer Settings"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/batteryAlertText"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.cardview.widget.CardView
            android:id="@+id/addPrinter"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="15dp"
            android:elevation="15dp"
            app:cardBackgroundColor="#074909"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="@id/printerSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/batteryAlertSwitch"
            app:layout_constraintTop_toTopOf="@id/printerSettings">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/status_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingVertical="3dp"
                android:text="ADD+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PrinterRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:background="#F4F4F4"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/printerSettings"
            app:layout_constraintWidth_percent="0.93"
            tools:itemCount="5"
            tools:listitem="@layout/printer_list_settings" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>